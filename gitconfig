[color]
    ui = true
[core]
    autocrlf = false
    eol = lf
    safecrlf = true
    editor = vim -f
[alias]
    st = status
    co = checkout
    ds = diff --staged
    sb = status -sb
    lg = log --pretty=format:'%Cred%h %Creset%s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    la = "!git config -l | grep alias | cut -c 7-"
    amend = commit --amend -C HEAD
    undo = reset --soft HEAD^
    standup = log --since='yesterday' --oneline --author=nikush.patel7@gmail.com
    graph = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(red) %an%Creset, %ar'
[push]
    default = current
[include]
    path = .gitconfig.local

# aliases (http://code.joejag.com/2013/everyday-git-aliases/)
# durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/

# vim: ft=gitconfig
